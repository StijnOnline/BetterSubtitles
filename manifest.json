{
    "name": "Better Subtitles",
    "description": "WIP by Stijn van Deijzen",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "128": "./images/BetterSubtitles128.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icons": {
            "128": "./images/BetterSubtitles128.png"
        }
    },
    "options_page": "./options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [ "Data/*", "images/*" ],
            "matches": [ "https://*/*", "http://*/*" ]
        }
    ]
}